</style>

<div style="background-color:#8bacbb">
    <div id="myCarousel" class="carousel slide" data-ride="carousel" style="text-align:center; margin:auto;">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
            <li data-target="#myCarousel" data-slide-to="4"></li>
        </ol>
        <div class="carousel-inner">
            <div class="item active" style="text-align:center; margin:auto; ">
                <img src="~/Images/car1.jpg" alt="" style="width:50%; max-height:538px; margin:auto;">
               

            </div>
            <div class="item" style="text-align:center; margin:auto; ">
